<style>
.modern-navbar {
  width: 100%;
  background: #fff;
  box-shadow: 0 2px 12px rgba(0,0,0,0.07);
  padding: 0 0 0 0;
  position: sticky;
  top: 0;
  z-index: 100;
}
.modern-navbar-inner {
  max-width: 1200px;
  margin: 0 auto;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 24px;
  height: 64px;
}
.modern-navbar-logo {
  display: flex;
  align-items: center;
  gap: 10px;
}
.modern-navbar-logo img {
  height: 92px;
  width: auto;
  border-radius: 14px;
}
.modern-navbar-search {
  flex: 1;
  display: flex;
  justify-content: center;
}
.modern-navbar-search form {
  display: flex;
  align-items: center;
  background: #f5f5f5;
  border-radius: 24px;
  padding: 2px 12px 2px 16px;
  box-shadow: 0 1px 4px rgba(0,0,0,0.03);
}
.modern-navbar-search input[type="search"] {
  border: none;
  background: transparent;
  outline: none;
  font-size: 1em;
  padding: 7px 0;
  width: 340px;
  min-width: 180px;
  max-width: 100%;
}
.modern-navbar-search button {
  background: none;
  border: none;
  color: #e53935;
  font-size: 1.2em;
  cursor: pointer;
  margin-left: 6px;
}
.modern-navbar-user {
  display: flex;
  align-items: center;
  gap: 10px;
  position: relative;
}
.modern-navbar-user img {
  height: 48px;
  width: 48px;
  border-radius: 50%;
  object-fit: cover;
  background: #f5f5f5;
  border: 2px solid #eee;
}
/* Remove hover menu, make menu always visible for button */
.modern-navbar-user-menu {
  display: none;
  position: fixed;
  /* Place menu below the right slider button (assumed height 48px + margin) */
  top: 120px;
  right: 32px;
  background: #fff;
  box-shadow: 0 8px 32px rgba(44,62,80,0.18), 0 1.5px 6px rgba(44,62,80,0.10);
  border-radius: 18px;
  min-width: 220px;
  max-width: 90vw;
  z-index: 2000;
  flex-direction: column;
  padding: 18px 0 10px 0;
  white-space: normal;
  align-items: stretch;
  animation: fadeInMenu 0.18s ease;
  border: 1.5px solid #f0f0f0;
  font-family: 'Segoe UI', 'Roboto', Arial, sans-serif;
}

@keyframes fadeInMenu {
  from { opacity: 0; transform: translateY(-10px); }
  to { opacity: 1; transform: translateY(0); }
}

.modern-navbar-user-menu a {
  color: #222;
  text-decoration: none;
  padding: 12px 24px 12px 48px;
  display: flex;
  align-items: center;
  gap: 12px;
  font-size: 1.08em;
  border: none;
  background: none;
  transition: background 0.15s, color 0.15s, padding-left 0.18s;
  position: relative;
}
.modern-navbar-user-menu a::before {
  content: '';
  display: block;
  position: absolute;
  left: 24px;
  width: 18px;
  height: 18px;
  background-size: contain;
  background-repeat: no-repeat;
  opacity: 0.82;
}
.modern-navbar-user-menu a[href="/profile"]::before {
  background-image: url('/Icon/navbar-icon-user.png');
}
.modern-navbar-user-menu a[href="/listings/new"]::before {
  background-image: url('/Icon/nestLoog.png');
}
.modern-navbar-user-menu a[href="/signup"]::before {
  background-image: url('/Icon/linkedIn.png');
}
.modern-navbar-user-menu a[href="/login"]::before {
  background-image: url('/Icon/google.png');
}
.modern-navbar-user-menu a[href="/logout"]::before {
  background-image: url('/Icon/navbar-icon-cross.png');
}
.modern-navbar-user-menu a:hover {
  background: #f8f8fa;
  color: #e53935;
  padding-left: 56px;
}
.modern-navbar-user-menu a:not(:last-child) {
  border-bottom: 1px solid #f0f0f0;
}
.modern-navbar-user-menu a:last-child {
  border-radius: 0 0 18px 18px;
}
.modern-navbar-user-menu a:first-child {
  border-radius: 18px 18px 0 0;
}
.modern-navbar-user-menu {
  box-shadow: 0 8px 32px rgba(44,62,80,0.18), 0 1.5px 6px rgba(44,62,80,0.10);
}
@media (max-width: 900px) {
  .modern-navbar-inner {
    padding: 0 8px;
    height: 54px;
  }
  .modern-navbar-logo img {
    height: 60px;
  }
  .modern-navbar-search input[type="search"] {
    width: 180px;
    font-size: 0.97em;
  }
  .modern-navbar-user img {
    height: 38px;
    width: 38px;
  }
}
@media (max-width: 600px) {
  .modern-navbar-inner {
    flex-direction: column;
    align-items: stretch;
    padding: 0 2vw;
    height: auto;
    gap: 6px;
  }
  .modern-navbar-logo {
    justify-content: center;
    width: 100%;
    margin-bottom: 2px;
  }
  .modern-navbar-logo img {
    height: 64px;
    border-radius: 12px;
    max-width: 96vw;
  }
  /* --- Responsive: Search and Profile Side by Side --- */
  .modern-navbar-search-user-row {
    display: flex;
    flex-direction: row;
    align-items: center;
    width: 100%;
    gap: 10px;
    margin: 2px 0 6px 0;
  }
  .modern-navbar-search {
    flex: 1 1 0;
    width: 1%;
    min-width: 0;
    margin: 0;
    justify-content: flex-start;
  }
  .modern-navbar-search form {
    width: 100%;
    min-width: 0;
    padding: 2px 6px 2px 8px;
  }
  .modern-navbar-search input[type="search"] {
    width: 100%;
    min-width: 0;
    font-size: 0.95em;
    padding: 7px 0;
    max-width: 100vw;
  }
  .modern-navbar-user {
    flex: 0 0 auto;
    justify-content: flex-end;
    margin-bottom: 0;
    width: auto;
  }
  .modern-navbar-user img {
    height: 38px;
    width: 38px;
  }
  .modern-navbar-user-menu {
    right: 2vw;
    top: 60px;
    min-width: 140px;
    padding: 10px 0 6px 0;
    border-radius: 10px;
  }
  .modern-navbar-user-menu a {
    font-size: 0.97em;
    padding: 8px 12px 8px 32px;
  }
  .modern-navbar-user-menu a::before {
    display: none !important;
  }
  /* Hide mobile row by default, show on mobile */
  .mobile-navbar-row { display: none; }
  @media (max-width: 600px) {
    .desktop-navbar-search, .desktop-navbar-user { display: none !important; }
    .mobile-navbar-row { display: flex !important; }
    .modern-navbar-search-user-row {
      display: flex;
      flex-direction: row;
      align-items: center;
      width: 100%;
      gap: 10px;
      margin: 2px 0 6px 0;
    }
    .modern-navbar-search {
      flex: 1 1 0;
      width: 1%;
      min-width: 0;
      margin: 0;
      justify-content: flex-start;
    }
    .modern-navbar-search form {
      width: 100%;
      min-width: 0;
      padding: 2px 6px 2px 8px;
    }
    .modern-navbar-search input[type="search"] {
      width: 100%;
      min-width: 0;
      font-size: 0.95em;
      padding: 7px 0;
      max-width: 100vw;
    }
  }
</style>
<nav class="modern-navbar">
  <div class="modern-navbar-inner">
    <div class="modern-navbar-logo">
      <a href="/listings"><img src="/Icon/nestLoog.png" alt="Nesthaven" /></a>
    </div>
    <!-- Desktop layout -->
    <div class="modern-navbar-search desktop-navbar-search">
      <form role="search" action="/listings/search" method="get">
        <input type="search" placeholder="Search by title, country, location or category..." aria-label="Search" name="q">
        <button type="submit"><i class="fa-solid fa-magnifying-glass"></i></button>
      </form>
    </div>
    <div class="modern-navbar-user desktop-navbar-user">
      <button id="navbarProfileBtn" style="background:none;border:none;padding:0;cursor:pointer;outline:none;display:flex;align-items:center;">
        <% if (typeof currUser !=='undefined' && currUser.image && currUser.image.url) { %>
          <img src="<%= currUser.image.url %>" alt="Profile" />
        <% } else { %>
          <img src="/Icon/navbar-icon-user.png" alt="User" />
        <% } %>
      </button>
      <div class="modern-navbar-user-menu" id="navbarProfileMenu">
        <a href="/profile"><span>Profile</span></a>
        <a href="/listings/new"><span>Add your Home</span></a>
        <% if (typeof currUser==='undefined' ) { %>
          <a href="/signup"><span>SignUp</span></a>
          <a href="/login"><span>LogIn</span></a>
        <% } %>
        <% if (typeof currUser !=='undefined' ) { %>
          <a href="/logout"><span>LogOut</span></a>
        <% } %>
      </div>
    </div>
    <!-- Mobile: search and profile side by side -->
    <div class="modern-navbar-search-user-row mobile-navbar-row" style="display:none;">
      <div class="modern-navbar-search" style="flex:1;">
        <form role="search" action="/listings/search" method="get" style="width:100%;">
          <input type="search" placeholder="Search by title, country, location or category..." aria-label="Search" name="q" style="width:100%;min-width:0;">
          <button type="submit"><i class="fa-solid fa-magnifying-glass"></i></button>
        </form>
      </div>
      <div class="modern-navbar-user">
        <button id="navbarProfileBtnMobile" style="background:none;border:none;padding:0;cursor:pointer;outline:none;display:flex;align-items:center;">
          <% if (typeof currUser !=='undefined' && currUser.image && currUser.image.url) { %>
            <img src="<%= currUser.image.url %>" alt="Profile" />
          <% } else { %>
            <img src="/Icon/navbar-icon-user.png" alt="User" />
          <% } %>
        </button>
        <div class="modern-navbar-user-menu" id="navbarProfileMenuMobile">
          <a href="/profile"><span>Profile</span></a>
          <a href="/listings/new"><span>Add your Home</span></a>
          <% if (typeof currUser==='undefined' ) { %>
            <a href="/signup"><span>SignUp</span></a>
            <a href="/login"><span>LogIn</span></a>
          <% } %>
          <% if (typeof currUser !=='undefined' ) { %>
            <a href="/logout"><span>LogOut</span></a>
          <% } %>
        </div>
      </div>
    </div>
  </div>
</nav>
<script>
// Move the right slider button when profile menu is open to avoid overlap
document.addEventListener('DOMContentLoaded', function() {
  const user = document.querySelector('.modern-navbar-user');
  const menu = document.querySelector('.modern-navbar-user-menu');
  const rightSlideButton = document.getElementById('rightSlideButton');
  if (user && menu && rightSlideButton) {
    user.addEventListener('mouseenter', function() {
      rightSlideButton.style.transition = 'right 0.2s';
      rightSlideButton.style.position = 'fixed';
      rightSlideButton.style.right = '32px'; // move it to the right side of the screen
      rightSlideButton.style.left = '';
      rightSlideButton.style.zIndex = '100';
    });
    user.addEventListener('mouseleave', function() {
      rightSlideButton.style.position = '';
      rightSlideButton.style.right = '';
      rightSlideButton.style.zIndex = '';
    });
  }
});
</script>
<script>
// Toggle profile menu on button click
document.addEventListener('DOMContentLoaded', function() {
  const profileBtn = document.getElementById('navbarProfileBtn');
  const menu = document.getElementById('navbarProfileMenu');
  let menuOpen = false;
  if (profileBtn && menu) {
    profileBtn.addEventListener('click', function(e) {
      e.stopPropagation();
      menuOpen = !menuOpen;
      menu.style.display = menuOpen ? 'flex' : 'none';
    });
    document.addEventListener('click', function(e) {
      if (menuOpen && !profileBtn.contains(e.target) && !menu.contains(e.target)) {
        menu.style.display = 'none';
        menuOpen = false;
      }
    });
  }
});
</script>
<script>
// Toggle mobile profile menu on button click
// (separate from desktop to avoid ID conflicts)
document.addEventListener('DOMContentLoaded', function() {
  const profileBtnMobile = document.getElementById('navbarProfileBtnMobile');
  const menuMobile = document.getElementById('navbarProfileMenuMobile');
  let menuOpenMobile = false;
  if (profileBtnMobile && menuMobile) {
    profileBtnMobile.addEventListener('click', function(e) {
      e.stopPropagation();
      menuOpenMobile = !menuOpenMobile;
      menuMobile.style.display = menuOpenMobile ? 'flex' : 'none';
    });
    document.addEventListener('click', function(e) {
      if (menuOpenMobile && !profileBtnMobile.contains(e.target) && !menuMobile.contains(e.target)) {
        menuMobile.style.display = 'none';
        menuOpenMobile = false;
      }
    });
  }
});
</script>
